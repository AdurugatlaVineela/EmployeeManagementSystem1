@model IEnumerable<EmployeeManagementSystem.Models.Project>

@{
    ViewData["Title"] = "Get";
}
<div style="position: absolute; top: 0; right: 0; width: 180px; text-align:right;">
    <button><h3><a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #FFFFFF; float: left" asp-area="" asp-controller="Account" asp-action="SignOut">Project SignOut</a></h3></button>
</div>
<br />
<div class="col-6">
    <h2 class="text-primary">Project List</h2>
</div>
<div class="container">
    <div class="btn-group">
        </h3><button type="button" class="nav-link text-dark btn-primary font-weight-bold" style="margin: 1px; background-color: #00b9ff;float: initial" asp-area="" asp-controller="Projects" asp- asp-action="Get">Project</button></h3>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="Employees" asp- asp-action="Get">Employee</a>
            <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="Companies" asp- asp-action="Get"> Company</a>
            <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="Departments" asp- asp-action="Get"> Department</a>
            <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="Users" asp- asp-action="Get"> User</a>
        </ul>
    </div>
</div>

<div class="container p-3">
    <div class="row pt-10">
        @*<div class="col-6">
                <h4>Project List</h4>
            </div>*@
        <div class="col-12">
            <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-area="" asp-controller="Projects" asp- asp-action="Create">Create new Project</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ProjectId
                    </th>
                    <th>
                        ProjectName
                    </th>
                    <th>
                        ProjectLocation
                    </th>
                    <th>
                        ProjectDescription
                    </th>
                    <th>
                        StartDate
                    </th>
                    <th>
                        EndDate
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.ProjectId</td>
                        <td width="30%">@obj.ProjectName</td>
                        <td width="20%">@obj.ProjectLocation</td>
                        <td width="20%">@obj.ProjectDescription</td>
                        <td width="10%">@obj.StartDate</td>
                        <td width="40%">@obj.EndDate</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Projects" asp-route-Id="@obj.ProjectId" asp-action="update" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-controller="Projects" asp-route-Id="@obj.ProjectId" asp-action="Delete" class="btn btn-danger mx-3">
                                    <i class="far fa-trash-alt"></i> Delete
                                </a>
                            </div>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

