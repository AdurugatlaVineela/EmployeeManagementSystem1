            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                EmployeeId
                            </th>
                            <th>
                                FirstName
                            </th>
                            <th>
                                LastName
                            </th>
                            <th>
                                BirthDate
                            </th>
                            <th>
                                HireDate
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td width="10%">@obj.EmployeeId</td>
                                <td width="30%">@obj.FirstName</td>
                                <td width="20%">@obj.LastName</td>
                                <td width="20%">@obj.BirthDate</td>
                                <td width="10%">@obj.HireDate</td>
                                <td width="40%">@obj.Address</td>
                                <td width="40%">@obj.City</td>
                                <td class="text-center">
